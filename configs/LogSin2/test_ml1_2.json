{
    "dataset": {
        "type": "LogSin2",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisL1Autoencoder",
        "args": {
          "hidden_features": [8, 4],
          "mah_weight": 0.6,
          "l1_weight": 0.4
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 5000,
            "checkpoint_start": 500,
            "checkpoint_freq": 500,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
