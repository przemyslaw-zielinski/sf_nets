{
    "dataset": {
        "type": "Sin2",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisL1Autoencoder",
        "args": {
          "hid_features": [4],
          "mah_weight": 0.5,
          "l1_weight": 0.5
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 3000,
            
            "checkpoint_start": 100,
            "checkpoint_freq": 300,
            "tb_logs": [
              ["plot_reconstruction", {}],
              ["plot_slow_latent_correlation", {}]
            ],

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
