{
    "dataset": {
        "type": "Sin2",
        "args": {
            "root": "data/",
            "train": true        }
    },

    "model": {
        "type": "SimpleAutoencoder",
        "args": {
          "hid_features": [4],
          "hid_activ": "Tanh",
          "loss_func": ["MSELoss", "L1Loss"],
          "loss_weight": [0.2, 0.8]
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 300,

            "checkpoint_start": 100,
            "checkpoint_freq": 300,
            "tb_logs": [
              ["plot_reconstruction", {}],
              ["plot_slow_latent_correlation", {}]
            ],

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3,

            "burst_dt": 0.004,
            "burst_size": 10000
      }
    }
}
