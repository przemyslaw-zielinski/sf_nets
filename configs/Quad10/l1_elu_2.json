{
    "dataset": {
        "type": "Quad10",
        "args": {
            "root": "data/",
            "train": true,
            "generate": false
        }
    },

    "model": {
        "type": "MahalanobisAutoencoder",
        "args": {
          "hid_features": [8, 4],
          "hid_activ": "ELU",
          "proj_loss": "L1Loss",
          "proj_loss_wght": 1.0
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 3000,

            "checkpoint_start": 100,
            "checkpoint_freq": 300,
            "tb_logs": [
              ["plot_reconstruction", {
                  "coords":[0,2],
                  "coords_labels":["x1", "x3"]
                  }],
              ["plot_reconstruction", {
                  "coords":[1,3],
                  "coords_labels":["x2", "x4"]
                  }],
              ["plot_slow_latent_correlation", {"coord": 0}],
              ["plot_slow_latent_correlation", {"coord": 1}]
            ],

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
