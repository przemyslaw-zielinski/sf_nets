{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "network": {
        "type": "SimpleAutoencoder",
        "args": {
          "hidden_features": [32, 32]
        }
    },

    "loss_function": {
        "type": "MahalanobisLoss",
        "args": {}
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "PrunedTrainer",
        "args": {
            "max_epochs": 400,
            "checkpoint_start": 100,
            "checkpoint_freq": 50,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3,

            "burst_dt": 0.004,
            "burst_size": 10000,

            "pruning": {
                "target_sparsity": 0.9,
                "type": "global_unstructured",
                "args": {
                    "parameters": ["encoder.layer1.weight",
                                   "encoder.layer1.bias",
                                   "encoder.layer2.weight",
                                   "encoder.layer2.bias",
                                   "decoder.layer2.weight",
                                   "decoder.layer2.bias",
                                   "decoder.layer3.weight",
                                   "decoder.layer3.bias"],
                    "pruning_method": "L1Unstructured",
                    "amount": 0.13
                },
                "schedule": [10, 13]
              }
          }
      }
}
