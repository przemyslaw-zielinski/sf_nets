{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisL1Autoencoder",
        "args": {
          "hidden_features": [32, 16],
          "mah_weight": 0.9,
          "l1_weight": 1.5
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 1000,
            "checkpoint_start": 100,
            "checkpoint_freq": 100,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
