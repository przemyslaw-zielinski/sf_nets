{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisAutoencoder",
        "args": {
            "hid_features": [32, 16]
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.003,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 1500,

            "checkpoint_start": 150,
            "checkpoint_freq": 50,
            "tb_logs": [
              ["plot_reconstruction", {}],
              ["plot_slow_latent_correlation", {}]
            ],

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    },

    "scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 200,
            "gamma": 0.8
        }
    }
}
