{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true,
            "generate": true
        }
    },

    "model": {
        "type": "SimpleAutoencoder",
        "args": {
          "hidden_features": [8, 4]
        }
    },

    "loss_func": {
        "type": "MahalanobisLoss",
        "args": {}
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 20,
            "checkpoint_start": 50,
            "checkpoint_freq": 50,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3,

            "burst_dt": 0.004,
            "burst_size": 10000
      }
    }
}
