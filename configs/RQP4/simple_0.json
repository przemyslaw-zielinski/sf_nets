{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true,
            "generate": false
        }
    },

    "network": {
        "type": "SimpleAutoencoder",
        "args": {
          "hidden_features": [8]
        }
    },

    "loss_function": {
        "type": "MahalanobisLoss",
        "args": {}
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 50,
            "log_freq": 11,
            "checkpoint_start": 50,
            "checkpoint_freq": 50,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3,

            "burst_dt": 0.004,
            "burst_size": 10000
      }
    },

    "scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 15,
            "gamma": 0.9
        }
    }
}
