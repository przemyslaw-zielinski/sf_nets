{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisAutoencoder",
        "args": {
            "hid_features": [16]
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 250,

            "checkpoint_start": 50,
            "checkpoint_freq": 25,
            "tb_logs": [
              ["plot_reconstruction", {}],
              ["plot_slow_latent_correlation", {}]
            ],

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
