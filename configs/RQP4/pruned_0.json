{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true,
            "simulate": false
        }
    },

    "model": {
        "type": "SimpleAutoencoder",
        "args": {
          "hidden_features": [8, 4]
        }
    },

    "loss_func": {
        "type": "MahalanobisLoss",
        "args": {}
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "PrunedTrainer",
        "args": {
            "max_epochs": 30,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3,

            "burst_dt": 0.004,
            "burst_size": 10000,

            "pruning": {
                "target_sparsity": 0.7,
                "type": "global_unstructured",
                "args": {
                    "parameters": ["dec_lay0.weight", "dec_lay0.bias",
                                   "dec_lay1.weight", "dec_lay1.bias",
                                   "enc_lay1.weight", "enc_lay1.bias",
                                   "enc_lay0.weight", "enc_lay0.bias"],
                    "pruning_method": "L1Unstructured",
                    "amount": 0.05
                },
                "schedule": [5, 5]
            }
        }
    }
}
