{
    "dataset": {
        "type": "RQP4",
        "args": {
            "root": "data/",
            "train": true
        }
    },

    "model": {
        "type": "MahalanobisAutoencoder",
        "args": {
            "hidden_features": [16]
        }
    },
    
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "trainer": {
        "type": "SimpleTrainer",
        "args": {
            "max_epochs": 250,
            "checkpoint_start": 50,
            "checkpoint_freq": 25,

            "batch_size": 16,
            "shuffle": true,
            "valid_split": 0.3
      }
    }
}
